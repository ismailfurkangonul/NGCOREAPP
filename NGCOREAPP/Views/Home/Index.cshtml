@{
    ViewData["Title"] = "Home Page";
}

<div class="row" ng-app="APP" ng-controller="HomeController">

    <div class="col-md-12">
        <div class="col-md-11">
            <div class="form-group">
                <label>uzun linki giriniz</label>
                <input class="form-control" ng-model="_link.LongUrl" />
            </div>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary" ng-click="GenerateShort()">Kısalt</button>
        </div>
        <div class="col-md-12">
            <strong>kisa linkiniz:{{ShortLink}}</strong>
        </div>

    </div>

    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Uzun Link</td>
                    <td>Kısa Link</td>
                      <td>Tıklanma sayısı</td>
                      <td></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="link in LinkList">

                    <td>{{link.longUrl}}</td>
                    <td id="kopyala{{link.shortUrl}}">https://localhost:7077/D/I?I={{link.shortUrl}}</td>
                     <td>{{link.clickCount}}</td>
                     <td>
                         <a class="btn-sm btn-success" ng-click="PreCopy(link.shortUrl)">Kopyala</a>
                         <a class ="btn-sm btn-warning" ng-show="link.clickCount>=link.clickLimit" ng-click="ExtraCredit(link)" >ek kredi</a>
                     </td>
                     
                </tr>
            </tbody>
        </table>
    </div>

    <div ng-show="Copied!=''" id="msg" style="background-color:#00000059; width:auto; padding:15px; position:absolute; bottom: 65px; right: 42px; text-align:center">
       Kopyalandı: {{Copied}}

    </div>


</div>

@section Scripts {

    <script src="~/js/Home.js"></script>


}